<local:FullScreenWindow x:Class="BoardGameFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BoardGameFrontend.Windows"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username" Margin="10" />
            <TextBox KeyDown="InputTextBox_KeyDown" Name="UsernameBox" Width="200" Margin="10" />
            <TextBlock Text="Password" Margin="10" />
            <PasswordBox KeyDown="InputTextBox_KeyDown" Name="PasswordBox" Width="200" Margin="10" />
            <Button Content="Login" Width="100" Margin="10" Click="Login_Click" />
            <TextBlock Name="ErrorMessage" Foreground="Red" Margin="10" Visibility="Collapsed" />
            <Button Content="Don't have an account? Sign Up" Width="200" Margin="10" Click="OpenSignUp_Click"/>
        </StackPanel>
    </Grid>
</local:FullScreenWindow>