<local:FullScreenWindow x:Class="BoardGameFrontend.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:BoardGameFrontend.Windows"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instructions" Height="300" Width="400">
    <Grid>
        <WebBrowser Name="PdfWebViewer" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="20,50,20,50" />
        
        <Button Content="Cancel"
                Width="100" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                Click="CancelButton_Click"/>
    </Grid>
</local:FullScreenWindow>